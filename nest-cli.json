{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "apps/user/src",
	"root": "apps/user",
	"monorepo": true,
	"compilerOptions": {
		"tsConfigPath": "apps/user/tsconfig.app.json",
		"deleteOutDir": true,
		"webpack": true,
		"assets": [
			{
				"include": "i18n/**/*",
				"watchAssets": true,
				"outDir": "dist/apps/api"
			}
		]
	},
	"projects": {
		"common": {
			"type": "library",
			"root": "libs/common",
			"entryFile": "index",
			"sourceRoot": "libs/common/src",
			"compilerOptions": {
				"tsConfigPath": "libs/common/tsconfig.lib.json",
				"deleteOutDir": true,
				"webpack": true
			}
		},
		"user": {
			"type": "application",
			"root": "apps/user",
			"entryFile": "main",
			"sourceRoot": "apps/user/src",
			"compilerOptions": {
				"tsConfigPath": "apps/user/tsconfig.app.json",
				"builder": "swc",
				"deleteOutDir": true
			}
		},

		"product": {
			"type": "application",
			"root": "apps/product",
			"entryFile": "main",
			"sourceRoot": "apps/product/src",
			"compilerOptions": {
				"tsConfigPath": "apps/product/tsconfig.app.json",
				"builder": "swc"
			}
		},
		"discount": {
			"type": "application",
			"root": "apps/discount",
			"entryFile": "main",
			"sourceRoot": "apps/discount/src",
			"compilerOptions": {
				"tsConfigPath": "apps/discount/tsconfig.app.json",
				"builder": "swc"
			}
		},
		"branch-store": {
			"type": "application",
			"root": "apps/branch-store",
			"entryFile": "main",
			"sourceRoot": "apps/branch-store/src",
			"compilerOptions": {
				"tsConfigPath": "apps/branch-store/tsconfig.app.json",
				"builder": "swc"
			}
		},
		"inventory": {
			"type": "application",
			"root": "apps/inventory",
			"entryFile": "main",
			"sourceRoot": "apps/inventory/src",
			"compilerOptions": {
				"tsConfigPath": "apps/inventory/tsconfig.app.json",
				"builder": "swc"
			}
		},
		"user-order": {
			"type": "application",
			"root": "apps/user-order",
			"entryFile": "main",
			"sourceRoot": "apps/user-order/src",
			"compilerOptions": {
				"tsConfigPath": "apps/user-order/tsconfig.app.json",
				"builder": "swc"
			}
		},
		"user-cart": {
			"type": "application",
			"root": "apps/user-cart",
			"entryFile": "main",
			"sourceRoot": "apps/user-cart/src",
			"compilerOptions": {
				"tsConfigPath": "apps/user-cart/tsconfig.app.json",
				"builder": "swc"
			}
		},
		"product-collection": {
			"type": "application",
			"root": "apps/product-collection",
			"entryFile": "main",
			"sourceRoot": "apps/product-collection/src",
			"compilerOptions": {
				"tsConfigPath": "apps/product-collection/tsconfig.app.json",
				"builder": "swc"
			}
		},
		"product-line": {
			"type": "application",
			"root": "apps/product-line",
			"entryFile": "main",
			"sourceRoot": "apps/product-line/src",
			"compilerOptions": {
				"tsConfigPath": "apps/product-line/tsconfig.app.json",
				"builder": "swc"
			}
		}
	}
}
